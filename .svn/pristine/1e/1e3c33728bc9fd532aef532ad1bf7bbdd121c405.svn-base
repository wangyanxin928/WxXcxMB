@import 'style/weui.wxss';

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

  /* by 王燕欣 start   */

.red-text{color: red;font-size: 18pt;margin-right: 5px;}
.icon30{display: inline-block;width: 20px;height: 20px; position: relative;top: 4px;}
.signBox{width: 100%;height: 82px;}
.signLeft{width: 75%;height: 100%;float: left;}
.signLeft .weui-media-box__desc{margin-top: 10px;}
.signRight{width: 20%;height: 100%;float: right;line-height: 100%;text-align: right;}

.headerTitle{font-size: 16px;color: #333;text-align: left;width: 90%;height: 100%;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;display: inline-block;}
.headerLink{width:10%;height: 100%; display: inline-block;float: right; }

.infoBox{width: 100%;height: 100%;display: block;}
.infoBox .infoHeader{width: 100%;height: 100%;display: block;line-height: 100%}
.infoBox .infoHeader .infoLeft{width: 50%;height: 100%;display: blockl;float: left;}
.infoBox .infoHeader .infoRight{width: 50%;height: 100%;display: blockl;float: right;text-align: right;}
.infoBox .infoHeader label{display: inline-block;}

.sectionBox .sectionTitleBox{display: inline-block;width: 50%;}
.sectionBox .courseIcon {display: inline-block;width: 20px;height: 20px; position: relative;top: 4px;}
.sectionBox .sectionTitle{display: inline-block;font-size: 14px;color: #333;}
.sectionBox .sectionTime{display: inline-block;width: 50%;text-align: right;font-size: 14px;color: #333;}
.sectionInfo label{display: block;width: 100%;color: #333;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;}
.sectionInfo label:first-child{margin-top: 10px;}
.sectionInfo label:last-child{color: #666;}


  /* by 王燕欣 end   */
  .flex-row{
  display: flex;
  flex-direction: row;
}
view, scroll-view, input, text{
  box-sizing: border-box;  
}


