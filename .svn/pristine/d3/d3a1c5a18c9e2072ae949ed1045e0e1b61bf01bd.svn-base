<view class="page me">
  <view class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.userInfoAvatar}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    <!-- <view class="usermotto">
        <text class="user-motto">{{motto}}</text>
      </view> -->
  </view>
  <view class="weui-cells__title">个人信息</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__hd">
        <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">性别：{{userInfo.sex}}</view>
    </view> 
    <view class="weui-cell">
      <view class="weui-cell__hd">
        <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">语言：中国</view>
    </view>
  </view>
  <view class="weui-cells__title">所属地</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__hd">
        <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">国家：{{userInfo.country}}</view>
    </view> 
    <view class="weui-cell">
      <view class="weui-cell__hd">
        <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">省市：{{userInfo.province}}</view>
    </view> 
    <view class="weui-cell">
      <view class="weui-cell__hd">
        <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">区县：{{userInfo.city}}</view>
    </view> 
  </view>

