@import 'style/weui.wxss';

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.button-sp-area {
margin:0 auto;
padding-top:15px;
width:60%;
}

  /* by 王燕欣 start   */

.textAuto{width: 100%;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;padding-right: 15px;}
.telText{color: #36a7ff;}
.red-text{color: red;font-size: 18px;margin-right: 5px;}
.icon30{display: inline-block;width: 20px;height: 20px; position: relative;top: 4px;}
.signBox{width: 100%;height: 85px;}
.signLeft{width: 75%;height: 100%;float: left;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;}
.signLeft .weui-media-box__desc{margin-top: 10px;}
.signRight{float: right;line-height: 100%;text-align: right;}

.headerTitle{font-size: 17px;color: #333;text-align: left;width: 85%;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;display: inline-block;}
.headerLink{width:10%;height: 100%; display: inline-block;float: right; }

.infoBox{width: 100%;height: 100%;display: block;}
.infoBox .infoHeader{width: 100%;height: 100%;display: block;line-height: 100%}
.infoBox .infoHeader .infoLeft{width: 50%;height: 100%;display: blockl;float: left;}
.infoBox .infoHeader .infoRight{width: 50%;height: 100%;display: blockl;float: right;text-align: right;}
.infoBox .infoHeader label{display: inline-block;}

.sectionBox .sectionTitleBox{display: inline-block;width: 60%;}

.sectionTitle{display: inline-block;color: #333;width:calc(100% - 35px);overflow: hidden;font-size: 15px;float: left;text-overflow:ellipsis;white-space: nowrap;}
.addDiscussBox{padding:14px 15px 10px;color:#999;font-size:13px;border-top: 1px solid #e5e5e5;position: fixed;bottom: 0px;width: 100%;background-color: #fff;}
.addDiscussTitleBox {width: calc(100% - 40px);float: left;}
.addDiscussTitleBox image{margin-top: 3px;}
.addDiscussTitleBox input{padding-left: 5px;}
.addDiscuss{float: right;}
.addDiscuss .icon{width: 26px;height: 26px;display: inline-block;}
.sectionBox .sectionTime{display: inline-block;width: 40%;text-align: right;font-size: 14px;color: #333;float: right;}
.sectionInfo label{display: block;width: 100%;color: #333;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;}

.userHeaderImg{height: 100px;width: 100px;border-radius: 50%;margin: auto;}
.userHeaderImg image{width: 100%;height: 100%;display: block;font-size: 100% 100%;background-repeat: no-repeat;border-radius: 50%;}
.userName {width: 100%;height: 100%;margin: auto;margin-top: 10px;text-align: center;}
.userAgreement{width: 100%;height: 100%;text-align: center;color: #999;font-size: 11px;}
.userAgreement label{color: red;}

.promptText{font-size: 14px;color: #666666;opacity: 0.6;display: block;padding: 0px 15px;text-indent: 28px;}
.briefText{font-size: 13px;color: #333;opacity: 0.6;display: block;text-indent: 24px;}

.setInfo{width: 100%;height: 100%;background-color: #fff;padding-top: 30px;}
.submitForm{background-color: #fff;padding: 10px 15px;}
.submitForm .weui-cell__bd{margin-bottom: 10px;position: relative;}
.submitForm .weui-cell__bd .input_icon{position: absolute;width: 24px;height: 24px;top:5px;left: 0px;}
.submitForm .weui-input{display: block;width: 100%;border-bottom: 1px solid #e5e5e5;padding: 10px;padding-left: 30px;}


.addressIcon{vertical-align: middle;width:30px; height: 30px;margin-right: 5px;}
.courseIcon {display: inline-block;width: 20px;height: 20px;margin-right: 5px; float: left;}
.icon25{width: 25px;height: 25px;display: inline-block;float: left;margin-right: 5px;}
.viewMore{font-size: 15px;color: #36a7ff;text-align: center;padding: 10px 15px;}
.respondIcon {display: inline-block;width: 20px;height: 20px;margin-right: 5px; float: right;margin-left: 5px;margin-top: 5px;}
.discussIcon{display: inline-block;width: 20px;height: 20px;margin-right: 5px; float: right;margin-left: 15px;margin-top: 3px;}

.discussInfoList{padding-bottom: 60px;}
.discussInfoList .discussInfo:first-child{margin-top: 10px;}
.discussInfo {padding: 3px 15px;font-size: 13px;color: #666;}
.discussInfo label{font-size:13px;color:#5e738b;font-weight:900;}



.operateBlock{width: 30%;height: 100%;line-height: 100%;display: inline-block;text-align: left;color: #bfbfbf;margin-right: 15px;margin-left: 20%;border-right:1px solid #bfbfbf;}
.operateBlock label,.operateBlockTwo label{position: relative;top: 3px;}
.operateBlockTwo{width: 30%;height: 100%;margin-left: 10%;line-height: 100%;display: inline-block;text-align: left;color: #bfbfbf;}


.respondBox {height: 30px;margin-top: 5px; }
.respondBox .respondInfo{background-color: #666;font-size: 13px;color: #fff;padding: 5px 10px;border-radius: 3px;display: inline-block;float: right;}
.respondBox .laud{display: inline-block;width: 60px;height: 20px;border-right: 1px solid #444;}
.respondBox .evaluate{display: inline-block;width: 60px;height: 20px;text-align: left;margin-left: 10px;}

.discussInfo .talkList{margin-top: 10px;color: #000;font-size: 13px;background-color: #f0f0f0;padding: 3px 5px;margin-left: 60px;}
.talkList .talkInfo{padding-top: 3px;}
.talkList .talkInfo label{color: #5e738b; font-weight: 900;}
.heartBox .heartInfo{display: block;width: 100%;padding-bottom: 3px;border-bottom: 1px solid #ddd;}
.heartIcon{display: inline-block;width: 20px;height: 20px;margin-right: 5px; float: left;}
.heartList{margin-top: 3px;color:#5e738b; font-weight: 900;}

.textarea{width: calc(100% - 20px);height: 100px; font-size: 15px;padding: 10px;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;border: 1px solid #e5e5e5}
/*问卷start  */
.issueListBox{padding-bottom:30px; }
.issueInfo{padding:10px 15px;position:relative;background-color: #fff;border-bottom: 1px solid #e5e5e5;}
.issueTitle{display:block;width:100%;color:#333;font-size: 15px;} 
.issueInfo .radio-group label{width: 100%;display: block;margin-top: 5px;font-size: 14px;color: #666;}
.issueInfo .checkbox-group label{width: 100%;display: block;margin-top: 5px;font-size: 14px;color: #666;}
.issueInput{border: 1px solid #e5e5e5;border-radius: 5px;padding: 5px 10px;margin-top: 5px;height:2rem;min-height:2rem;line-height:2rem;font-size: 14px;color: #666;}
.issueInfoSubmit{padding:0px 15px 10px 15px;color:#999;font-size:13px;position:fixed;bottom:0px;width:100%;
background-color:#fff;z-index: 99;}
.issueBaseline{font-size: 13px;color: #666;padding: 15px 10px;background-color: #fff;text-align: center;border-bottom:1px solid #e5e5e5; }
/*问卷end  */
/* 签到记录start  */
.signDate{display: inline-block;width: 22%;font-size: 16px;color: #333;position: relative;top: -10px;}
.signInfo{display: inline-block;width: 53%;font-size: 13px;color: #333;text-align: center;padding: 0px 10px;}
.signInfo .signTitle{width: 100%;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;}
.signTime{display: inline-block;width: 25%;font-size: 13px;color: #333;position: relative;top: -10px;text-align: right;}
/* 签到记录end  */


  /* by 王燕欣 end   */
  .flex-row{
  display: flex;
  flex-direction: row;
}
view, scroll-view, input, text{
  box-sizing: border-box;  
}


